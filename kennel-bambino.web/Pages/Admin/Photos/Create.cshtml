@page
@model kennel_bambino.web.Pages.Admin.Photos.CreateModel
@{
    ViewData["Title"] = "Create New Photo";
}


@if (ViewData["Message"] != null)
{
    <div class="alert alert-dismissible alert-warning badge-light">
        <i class="fa fa-exclamation-triangle fa-fw"></i> @ViewData["Message"]
    </div>
}



<div class="card border-secondary">
    <div class="card-header text-capitalize bg-success ">
        <i class="fa fa-plus fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post" class="form-group" autocomplete="on" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 col-sm-6 ">
                    <div class="form-group">
                        <label asp-for="Photo.PetId">Pet Name</label>
                        <select class="form-control" asp-for="Photo.PetId" asp-items="Model.PetsSelectList">
                            <option disabled="disabled" value="">Please choose one Pet</option>
                        </select>
                        <span asp-validation-for="Photo.PetId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group mb-3 w-100 max-width-520px">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="Photo.PhotoName" id="carousel" name="Image" required="required" />
                        <label class="custom-file-label" asp-for="Photo.PhotoName">Choose file</label>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-plus fa-fw"></i> Add
                </button>
            </div>

        </form>
    </div>
</div>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#carousel").change(function (event) {
                var filename = event.target.files[0].name;
                if (filename.length > 0) {
                    $(this).next().text(filename);
                }
            });
        });
    </script>


}
