@page "{id:int?}"
@model kennel_bambino.web.Pages.Admin.Groups.CreateModel
@{
    string title = (Model.ParrentId != null ? "SubGroup" : "Group");

    ViewData["Title"] = $"Create New {title}";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-dismissible alert-warning badge-light">
        <i class="fa fa-exclamation-triangle fa-fw"></i> @ViewData["Message"]
    </div>
}


<div class="card border-secondary">
    <div class="card-header text-capitalize bg-success ">
        <i class="fa fa-plus fa-fw"></i> @ViewData["Title"]
    </div>


    <div class="card-body">

        <form method="post" class="form-group" autocomplete="on" enctype="multipart/form-data">

            @if (Model.ParrentId != null)
            {
                <input type="hidden" asp-for="Group.ParentId" value="@Model.ParrentId" />
            }

            <div class="row">
                <div class="col-12 col-sm-6 ">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Group.Title">Pet Name</label>
                        <input type="text" asp-for="Group.Title" class="form-control" />

                        <span asp-validation-for="Group.Title" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="input-group mb-3 w-100 max-width-520px">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="Group.ImageName" id="carousel" name="Image" />
                        <label class="custom-file-label" asp-for="Group.ImageName">Choose file</label>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-plus fa-fw"></i> Add
                </button>
            </div>

        </form>
    </div>

</div>




@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#carousel").change(function (event) {
                var filename = event.target.files[0].name;
                if (filename.length > 0) {
                    $(this).next().text(filename);
                }
            });
        });
    </script>


}
