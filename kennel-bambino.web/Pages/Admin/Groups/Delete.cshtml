@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Groups.DeleteModel
@{
    ViewData["Title"] = "Delete Group";
}

<a asp-page="Index" class="btn btn-secondary border border-info my-2"><i class="fas fa-arrow-left fa-fw"></i> Back to List</a>

<div class="card border-secondary">
    <div class="card-header text-capitalize bg-danger badge-light">
        <i class="fa fa-trash-alt fa-fw"></i> @ViewData["Title"]
    </div>


    <div class="card-body">

        <form method="post">

            <input type="hidden" asp-for="Group.GroupId" />

            <div class="table-responsive w-100">
                <table class="table table-borderless table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>@Model.Group.GroupId</td>
                        </tr>
                        @if (Model.Group.ImageName != null)
                        {
                            <tr>
                                <th>Image</th>
                                <td>
                                    <img src="~/images/thumbnails/@Model.Group.ImageName" alt="@Model.Group.Title"
                                         class="rounded fixed-width-image-75" />
                                </td>
                            </tr>
                        }
                        <tr>
                            <th>Title</th>
                            <td>@Model.Group.Title</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-danger disabled">
                    <i class="fa fa-trash-alt fa-fw"></i> Delete
                </button>
            </div>

            <div class="alert alert-dismissible alert-warning mt-3">

                <p class="alert-heading">
                    <i class="fa fa-exclamation-triangle fa-fw"></i>  This Field Have Some
                    <strong>dependencies</strong> ,be caution if you want to delete!!!
                </p>

            </div>

        </form>

    </div>

</div>
