@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Messages.EditModel
@{
    ViewData["Title"] = "Edit Message";
}


@if (ViewData["Message"] != null)
{
    <div class="alert alert-dismissible alert-warning badge-light">
        <i class="fa fa-exclamation-triangle fa-fw"></i> @ViewData["Message"]
    </div>

}

<div class="card border-secondary">
    <div class="card-header text-capitalize bg-warning ">
        <i class="fa fa-pen fa-fw"></i> @ViewData["Title"]
    </div>

    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Contact.ContactId" />
        <input type="hidden" asp-for="Contact.Title" />
        <input type="hidden" asp-for="Contact.PhoneNumber" />
        <input type="hidden" asp-for="Contact.SubmitDate" />
        <input type="hidden" asp-for="Contact.Description" />

        <div class="form-group">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" asp-for="Contact.IsChecked">
                <label class="custom-control-label" asp-for="Contact.IsChecked"></label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-warning disabled">
                <i class="fa fa-pen fa-fw"></i> Edit
            </button>
        </div>

    </form>

</div>
