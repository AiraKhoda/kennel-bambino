@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Messages.DeleteModel
@{
    ViewData["Title"] = "Delete Message";
}

<a asp-page="Index" class="btn btn-secondary border border-info my-2"><i class="fas fa-arrow-left fa-fw"></i> Back to List</a>

<div class="card border-secondary">
    <div class="card-header text-capitalize bg-danger badge-light">
        <i class="fa fa-trash-alt fa-fw"></i> @ViewData["Title"]
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Contact.ContactId" />

    <div class="card border-primary mb-3">
        <header class="card-header">Phone Number: <span class="badge badge-primary">@Model.Contact.PhoneNumber</span></header>
        <div class="card-body">
            <h4 class="card-title">@Model.Contact.Title</h4>
            <p class="card-text">@Model.Contact.Description</p>

            <hr />
            <div class="clearfix">

                <span class="badge badge-light float-sm-left">@Model.Contact.SubmitDate.ToLongDateString()</span>

                <span class="float-right">
                    @if (Model.Contact.IsChecked)
                    {
                        <span class="badge badge-pill badge-success">Checked</span>
                    }
                    else
                    {
                        <span class="badge badge-pill badge-danger">Not Checked!</span>
                    }
                </span>

            </div>
        </div>

        <footer class="card-footer clearfix">
            <div class="float-sm-left">

                <button type="submit" class="btn btn-danger disabled"><i class="fa fa-trash-alt fa-fw"></i> Delete</button>
            </div>

        </footer>
    </div>
</form>
