@page
@model kennel_bambino.web.Pages.Admin.Carousels.EditModel
@{
    ViewData["Title"] = "Edit Carousel";
}


@if (ViewData["Message"] != null)
{
    <div class="alert alert-dismissible alert-warning badge-light">
        <i class="fa fa-exclamation-triangle fa-fw"></i> @ViewData["Message"]
    </div>
}

<div class="card border-secondary">
    <div class="card-header text-capitalize bg-warning ">
        <i class="fa fa-pen fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post" class="form-group" autocomplete="on" enctype="multipart/form-data">

            <input type="hidden" asp-for="Carousel.CarouselId" />
            <input type="hidden" asp-for="Carousel.ImageName" />

            <div class="row">
                <div class="col-12 col-sm-6">
                    <div class="form-group">
                        <label class="col-form-label" asp-for="Carousel.Alt"></label>
                        <input type="text" class="form-control" asp-for="Carousel.Alt" />
                        <small class="form-text text-muted">Wrie it descriptive,for SEO purposes.</small>
                        <span asp-validation-for="Carousel.Alt" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 col-sm-6">

                    <div class="form-group">
                        <label class="col-form-label" asp-for="Carousel.Number"></label>
                        <input type="text" class="form-control" asp-for="Carousel.Number" />

                        <span asp-validation-for="Carousel.Alt" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="input-group my-3 w-100 max-width-520px">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="Carousel.ImageName" id="carousel" name="Image" />
                        <label class="custom-file-label my-3" asp-for="Carousel.ImageName">Choose file</label>
                    </div>
                    <img src="~/images/carousels/@Model.Carousel.ImageName" class="rounded img-thumbnail fixed-width-img-85 mx-3" asp-append-version="true" />

                </div>
            </div>


            <div>
                <button type="submit" class="btn btn-warning disabled">
                    <i class="fa fa-pen fa-fw"></i> Edit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#carousel").change(function (event) {
                var filename = event.target.files[0].name;
                if (filename.length > 0) {
                    $(this).next().text(filename);
                }
            });
        });
    </script>
}


