@page
@model kennel_bambino.web.Pages.Admin.Carousels.IndexModel
@{
    ViewData["Title"] = "Carousel List";
}

<section>

    <h1 class="text-capitalize display-4">@ViewBag.Title</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <i class="fa fa-check fa-fw"></i> @TempData["Success"]
        </div>
    }

    <div class="clearfix">
        <a asp-page="Create" class="btn btn-primary text-capitalize float-left mb-3">
            <i class="fa fa-plus fa-fw"></i> AddNew
        </a>

        <button type="button" class="btn btn-primary text-capitalize float-right mb-3">
            <i class="fa fa-th-list fa-fw"></i> @Model.CarouselsCount
        </button>

    </div>

    @if (Model.Carousels.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var carousel in Model.Carousels)
                    {
                    <tr>
                        <td>@carousel.CarouselId</td>
                        <td>
                            <img src="~/images/carousels/@carousel.ImageName" alt="@carousel.Alt" class="rounded img-thumbnail fixed-width-img-85"/>
                        </td>
                        <td>@carousel.Alt</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@carousel.CarouselId"
                               class="btn btn-outline-warning btn-sm"><i class="fa fa-pen fa-fw"></i>Edit</a>

                            <a asp-page="Delete" asp-route-id="@carousel.CarouselId"
                               class="btn btn-sm btn-outline-danger"><i class="fa fa-trash-alt fa-fw"></i>Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-dismissible border border-warning alert-danger">
            <p class="mb-2">
                <i class="fa fa-exclamation-triangle fa-fw"></i> <strong>No</strong> Carousel Exist.
            </p>
        </div>
    }

</section>


