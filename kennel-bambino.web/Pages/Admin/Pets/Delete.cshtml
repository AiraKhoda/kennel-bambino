@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Pets.DeleteModel
@{
    ViewData["Title"] = "Delete Pet";
}


<a asp-page="Index" class="btn btn-secondary border border-info my-2"><i class="fas fa-arrow-left fa-fw"></i> Back to List</a>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}


<div class="card border-secondary mb-3">


        <div class="card-header text-capitalize bg-danger badge-light">
            <i class="fa fa-trash-alt fa-fw"></i> @ViewData["Title"]
        </div>

        <div class="card-body">

            <form method="post">

                <input type="hidden" asp-for="Pet.PetId" />

                <div class="table-responsive w-100">
                    <table class="table table-info table-hover">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td><span class="badge badge-info">@Model.Pet.PetId</span></td>
                            </tr>
                            <tr>
                                <th>NationalId</th>
                                <td>
                                    <span class="badge badge-info">@Model.Pet.Code</span>
                                </td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td><span class="badge badge-info">@Model.Pet.Price</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger disabled">
                        <i class="fa fa-trash-alt fa-fw"></i> Delete
                    </button>
                </div>

            </form>

        </div>

    </div>

